@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<h2>
    TASK LIST<i class="fa-solid fa-house"></i>
</h2>
<hr />

<table style="text-align:center" class="table table-bordered table-striped">
    <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Time</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)

    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>

            <td>

                <button class="btn btn-outline-secondary"><a href="@Url.Action("Edit", "Home", new { @id = Model.Rows[i][0] })">Edit</a></button>
                <button class="btn btn-outline-secondary"><a href="@Url.Action("Select", "Home", new { @id = Model.Rows[i][0] })">Select</a></button>
                <button class="btn btn-outline-secondary"><a href="@Url.Action("Delete", "Home", new { @id = Model.Rows[i][0] })">Delete</a></button>

            </td>
        </tr>
    }

</table>

